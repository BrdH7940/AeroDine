{
    "name": "aerodine-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "backend",
        "frontend",
        "packages/*"
    ],
    "scripts": {
        "dev": "pnpm --parallel --filter './backend' --filter './frontend' dev",
        "dev:backend": "pnpm --filter './backend' start:dev",
        "dev:frontend": "pnpm --filter './frontend' dev",
        "build": "pnpm --filter './packages/shared-types' build && pnpm --filter './backend' build && pnpm --filter './frontend' build",
        "build:shared": "pnpm --filter './packages/shared-types' build",
        "build:backend": "pnpm --filter './backend' build",
        "build:frontend": "pnpm --filter './frontend' build",
        "lint": "pnpm --filter './backend' lint && pnpm --filter './frontend' lint",
        "lint:backend": "pnpm --filter './backend' lint",
        "lint:frontend": "pnpm --filter './frontend' lint",
        "format": "pnpm --filter './backend' format",
        "test": "pnpm --filter './backend' test",
        "test:e2e": "pnpm --filter './backend' test:e2e",
        "install:all": "pnpm install"
    }
}
